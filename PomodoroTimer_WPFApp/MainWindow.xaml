<Window x:Class="PomodoroTimer_WPFApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PomodoroTimer_WPFApp"
        mc:Ignorable="d"
        Title="Pomodoro" Height="55" Width="135" Loaded="Window_Loaded" ResizeMode="NoResize"
        >
    <Grid Background="#333">
        <Label x:Name="TimerLabel" Content="25:00" FontFamily="Segeo UI" FontSize="50" 
               HorizontalContentAlignment="Center" VerticalContentAlignment="Center"
               Foreground="Red" HorizontalAlignment="Left" VerticalAlignment="Top" >            
        </Label>
    </Grid>
</Window>
